{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss"
  ],
  "plugins": ["stylelint-order", "stylelint-scss"],
  "rules": {
    "order/properties-alphabetical-order": null,
    "scss/at-import-partial-extension": null,
    "scss/at-import-no-partial-leading-underscore": null,
    "scss/dollar-variable-pattern": "^[a-z][a-zA-Z0-9-]*$",
    "scss/percent-placeholder-pattern": "^[a-z][a-zA-Z0-9-]*$",
    "scss/at-mixin-pattern": "^[a-z][a-zA-Z0-9-_]*$",
    "scss/at-function-pattern": "^[a-z][a-zA-Z0-9-]*$",
    "max-nesting-depth": 6,
    "selector-max-id": 0,
    "selector-max-universal": 2,
    "selector-max-type": 4,
    "selector-max-class": 6,
    "selector-max-attribute": 3,
    "selector-max-pseudo-class": 4,
    "selector-max-combinators": 4,
    "selector-max-compound-selectors": 6,
    "declaration-no-important": null,
    "color-no-hex": null,
    "color-hex-length": "short",
    "length-zero-no-unit": true,
    "font-weight-notation": "numeric",
    "property-no-vendor-prefix": null,
    "value-no-vendor-prefix": null,
    "at-rule-no-vendor-prefix": true,
    "selector-no-vendor-prefix": true,
    "media-feature-name-no-vendor-prefix": true,
    "selector-class-pattern": null,
    "custom-property-pattern": null,
    "declaration-block-single-line-max-declarations": null,
    "declaration-block-no-redundant-longhand-properties": null,
    "declaration-block-no-duplicate-properties": true,
    "no-descending-specificity": null,
    "no-duplicate-selectors": true,
    "comment-empty-line-before": [
      "always",
      {
        "except": ["first-nested"],
        "ignore": ["after-comment", "stylelint-commands"]
      }
    ],
    "comment-whitespace-inside": "always",
    "rule-empty-line-before": [
      "always-multi-line",
      {
        "except": ["first-nested"],
        "ignore": ["after-comment"]
      }
    ]
  },
  "ignoreFiles": [
    "node_modules/**/*",
    "dist/**/*",
    "build/**/*",
    "coverage/**/*",
    "**/*.min.css",
    ".changeset/**/*",
    "packages/storybook/dist/**/*",
    "packages/storybook/storybook-static/**/*",
    "proprietary/design-tokens/dist/**/*",
    "proprietary/design-tokens/build/**/*",
    "**/tokens/**/*",
    "components/*/dist/**/*"
  ]
}
