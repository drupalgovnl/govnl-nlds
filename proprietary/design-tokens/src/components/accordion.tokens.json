{
  "govnl": {
    "accordion": {
      "body": {
        "font-family": {
          "$type": "fontFamilies",
          "$value": "{govnl.document.font-family}"
        },
        "font-size": {
          "$type": "fontSizes",
          "$value": "{govnl.document.font-size}"
        },
        "font-weight": {
          "$type": "fontWeights",
          "$value": "{govnl.document.font-weight}"
        },
        "border-color": {
          "$type": "color",
          "$value": "transparent"
        },
        "border-width": {
          "$type": "border",
          "$value": "{govnl.border.border-width.sm}"
        },
        "padding-block-end": {
          "$type": "spacing",
          "$value": "{govnl.space.md}"
        },
        "padding-block-start": {
          "$type": "spacing",
          "$value": "{govnl.space.sm}"
        },
        "padding-inline-end": {
          "$type": "spacing",
          "$value": "{govnl.space.sm}"
        },
        "padding-inline-start": {
          "$type": "spacing",
          "$value": "{govnl.space.sm}"
        }
      },
      "button": {
        "background-color": {
          "$type": "color",
          "$value": "{govnl.document.background-color}"
        },
        "border-color": {
          "$type": "color",
          "$value": "transparent"
        },
        "color": {
          "$type": "color",
          "$value": "{govnl.interaction.color}"
        },
        "font-family": {
          "$type": "fontFamilies",
          "$value": "{govnl.document.font-family}"
        },
        "font-size": {
          "$type": "fontSizes",
          "$value": "{govnl.document.font-size}"
        },
        "font-weight": {
          "$type": "fontWeights",
          "$value": "{govnl.document.strong.font-weight}"
        },
        "line-height": {
          "$type": "lineHeights",
          "$value": "{govnl.document.line-height}"
        },
        "gap": {
          "$type": "spacing",
          "$value": "{govnl.gap-content.min} / 2"
        },
        "icon": {
          "size": {
            "$type": "sizing",
            "$value": "1.5em"
          },
          "margin-inline": {
            "$type": "spacing",
            "$value": "{govnl.space.xs}"
          },
          "color": {
            "$type": "color",
            "$value": "{govnl.interaction.color}"
          }
        },
        "padding-block-end": {
          "$type": "spacing",
          "$value": "{govnl.space.xs}"
        },
        "padding-block-start": {
          "$type": "spacing",
          "$value": "{govnl.space.xs}"
        },
        "padding-inline-end": {
          "$type": "spacing",
          "$value": "{govnl.space.sm}"
        },
        "padding-inline-start": {
          "$type": "spacing",
          "$value": "{govnl.space.sm}"
        },
        "hover": {
          "background-color": {
            "$type": "color",
            "$value": "{govnl.color.grijs.100}"
          },
          "border-color": {
            "$type": "color",
            "$value": "transparent"
          },
          "color": {
            "$type": "color",
            "$value": "{govnl.interaction.hover.color}"
          }
        },
        "focus": {
          "background-color": {
            "$type": "color",
            "$value": "{govnl.focus.background-color}"
          },
          "border-color": {
            "$type": "color",
            "$value": "transparent"
          },
          "color": {
            "$type": "color",
            "$value": "{govnl.focus.color}"
          }
        },
        "active": {
          "background-color": {
            "$type": "color",
            "$value": "{govnl.color.grijs.200}"
          },
          "border-color": {
            "$type": "color",
            "$value": "transparent"
          },
          "color": {
            "$type": "color",
            "$value": "{govnl.interaction.active.color}"
          }
        },
        "expanded": {
          "background-color": {
            "$type": "color",
            "$value": "{govnl.document.background-color}"
          },
          "border-color": {
            "$type": "color",
            "$value": "transparent"
          },
          "color": {
            "$type": "color",
            "$value": "{govnl.document.color}"
          }
        },
        "section": {
          "border-color": {
            "$type": "color",
            "$value": "{govnl.line.subtle.border-color}"
          },
          "border-width": {
            "$type": "border",
            "$value": "0px"
          },
          "border-block-end-width": {
            "$type": "border",
            "$value": "{govnl.border.border-width.sm}"
          }
        }
      }
    }
  }
}