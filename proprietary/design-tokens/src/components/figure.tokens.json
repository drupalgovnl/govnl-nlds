{
  "govnl": {
    "figure": {
      "caption": {
        "color": {
          "$type": "color",
          "$value": "{govnl.document.color}"
        },
        "font-size": {
          "$type": "fontSizes",
          "$value": "{govnl.typography.font-size.sm}"
        },
        "line-height": {
          "$type": "lineHeights",
          "$value": "{govnl.typography.line-height.sm}"
        }
      },
      "row-gap": {
        "$type": "spacing",
        "$value": "{govnl.gap-content.min} / 2"
      }
    }
  }
}
